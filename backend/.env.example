# GitHub App
GITHUB_APP_ID=<your-app-id>
GITHUB_PRIVATE_KEY=<path-to-private-key>
GITHUB_WEBHOOK_SECRET=<webhook-secret-from-github>

# Gemini API
GEMINI_API_KEY=<your-api-key>

# Database
DATABASE_URL=sqlite:///./rev2.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REVIEWS_PER_HOUR=100

# Performance
MAX_DIFF_SIZE=15000
MAX_FILE_SIZE=8000
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=5

# Environment
ENVIRONMENT=development
